#!/bin/sh
# postinst script for mitkc-buildslave-config
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

bbhome=/var/lib/buildbot
sshdir=$bbhome/.ssh
keyfile=$sshdir/id_rsa

case "$1" in
    configure)
	if [ ! -d $bbhome/.ssh ]; then
	    su -s /bin/sh -c "mkdir $sshdir" buildbot
	fi
	if [ ! -f $keyfile ]; then
	    su -s /bin/sh -c "ssh-keygen -q -N '' -f $keyfile -t rsa" buildbot
	fi
	if ssh-keygen -F krbdev.mit.edu -f $sshdir/known_hosts 2>/dev/null \
		| grep found: 2>/dev/null; then
	    :
	else
	    su -s /bin/sh -c "cat >> $bbhome/.ssh/known_hosts" buildbot << EOF
krbdev.mit.edu,18.9.62.43 ssh-rsa 
EOF
	fi
	if crontab -l -u buildbot | grep '@reboot exec ssh' ; then
	    :
	else
	    crontab -l -u buildbot | ( cat ; cat <<EOF ) \
		| crontab -u buildbot -
@reboot exec ssh -l buildbot -N -L9989:127.0.0.1:9989 krbdev.mit.edu
EOF
	fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
